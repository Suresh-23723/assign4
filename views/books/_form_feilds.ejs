<div class="form-row">
    <div class="form-item">
        <!--title-->
        <label>Title</label>
        <input type="text" name="title" value = "<%= book.title %>">    
    </div>
    <div class="form-item">
        <!--Author select box-->
        <label>Author</label>
        <select name="author">
            <% authors.forEach(author => { %>
                <% if(author.id === book.author) { %>
                <option selected label = "<%= author.name %>" value="<%= author.id %>"></option>
                <% } else { %>
                    <option label = "<%= author.name %>" value="<%= author.id %>"></option>
                <% } %>
            <% }) %>
        </select>
    </div>
</div>
<div class="form-row">
    <!--Published date-->
    <div class="form-item">
        <label>Published Date</label>
        <input type="date" name="publishedDate" 
        value = "<%= book.publishedDate == null ? '' : book.publishedDate.toISOString().split('T')[0] %>">
    </div>

    <!--Page Count-->
    <div class="form-item">
        <label>Page Count</label>
        <input type="number" name="pageCount" min = "1" value = "<%= book.pageCount %>">
    </div>
</div>

<div class="form-row">
    <!--Cover-->
    <div class="form-item form-item-no-grow">
        <label>Cover</label>
        <input type="file" name="cover" class="filepond">
    </div>

    <!--Description-->
    <div class="form-item">
        <label>Description</label>
        <textarea name = "description"><%= book.description %></textarea>
    </div>
</div>
